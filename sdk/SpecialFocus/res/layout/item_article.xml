<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    
    <ImageView
        android:id="@+id/article_img"
        android:layout_width="100dp"
        android:layout_centerVertical="true"
        android:layout_height="80dp"/>
    
    <TextView
        android:id="@+id/article_title"
        android:layout_toRightOf="@id/article_img"
        android:layout_alignTop="@id/article_img"
        android:layout_marginLeft="5dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="抬头聊天了"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/article_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_title"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@id/article_title"
        android:maxLines="4"
        android:textColor="#666666"
        android:textSize="14sp"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/article_title"
        android:layout_below="@id/article_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
	    <TextView
	        android:id="@+id/article_from1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ff00ff"
	        android:textSize="10sp"
	        android:text="读者文摘"/>
	    <TextView
	        android:id="@+id/article_from2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:textColor="#ff00ff"
	        android:textSize="10sp"
	        android:text="读者文摘"/>

	    <TextView
	        android:id="@+id/article_from3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:textColor="#ff00ff"
	        android:textSize="10sp"
	        android:text="读者文摘"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/article_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/article_content"
        android:layout_marginTop="4dp"
        android:textColor="#999999"
        android:textSize="10sp"
        android:text="2015-02-20"/>

</RelativeLayout>
